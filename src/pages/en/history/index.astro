---
import "../../../styles/global.css";
import Layout from "../../../layouts/Layout.astro";

import { getLangFromUrl } from "../../../i18n/utils";
import { translations } from "../../../i18n/translations";

const lang = getLangFromUrl(Astro.url);
const { preheading, heading, paragraphs, ctaLabel, imageAlt } =
  translations[lang].history;
---

<Layout>
  <div class="bg-[var(--background)] py-28 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0 lg:max-w-none">
        <p
          class="text-base/7
            font-semibold
            text-[var(--primary)]
            opacity-0
            animate-fade-in"
        >
          {preheading}
        </p>

        <h1
          class="mt-2
            text-4xl
            font-semibold
            tracking-tight
            text-[var(--foreground)]
            sm:text-5xl
            opacity-0
            animate-fade-in-delay-200"
        >
          {heading}
        </h1>

        <div
          class="mt-10
            grid
            max-w-xl
            grid-cols-1
            gap-8
            text-base/7
            text-[var(--muted-foreground)]
            lg:max-w-none
            lg:grid-cols-2"
        >
          <div class="opacity-0 animate-fade-in-delay-400">
            <p class="text-[var(--foreground)]">
              {paragraphs[0]}
            </p>
            <p class="mt-8 text-[var(--foreground)]">
              {paragraphs[1]}
            </p>
          </div>

          <div class="opacity-0 animate-fade-in-delay-600">
            <p class="text-[var(--foreground)]">
              {paragraphs[2]}
            </p>
            <p class="mt-8 text-[var(--foreground)]">
              {paragraphs[3]}
            </p>
          </div>
        </div>

        <div class="mt-10 flex opacity-0 animate-fade-in-delay-800">
          <a
            href="/contacto"
            class="rounded-md
              bg-[var(--primary)]
              px-3.5
              py-2.5
              text-sm
              font-semibold
              text-[var(--primary-foreground)]
            dark:text-white
              shadow-xs
              hover:bg-[var(--primary)]/90
              focus-visible:outline-2
              focus-visible:outline-offset-2
              focus-visible:outline-[var(--primary)]
              transition-colors
              duration-200"
          >
            {ctaLabel}
          </a>
        </div>
      </div>
    </div>

    <div class="relative overflow-hidden pt-16 lg:pt-20">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <img
          class="mb-[-12%]
            rounded-xl
            shadow-2xl
            ring-1
            ring-gray-900/10
            opacity-0
            animate-fade-in-delay-1000"
          src="https://res.cloudinary.com/https-imsoft-io/image/upload/v1740207259/imsoft-images/pictures/historia-imsoft.jpg"
          loading="lazy"
          alt="Imagen de la historia de imSoft"
        />

        <div class="relative" aria-hidden="true">
          <div
            class="absolute
              -inset-x-20
              bottom-0
              bg-linear-to-t
              from-white
              pt-[7%]
              dark:from-[var(--background)]"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
