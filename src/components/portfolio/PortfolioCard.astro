---
import type { PortfolioCardProps } from "../../interfaces/Portfolio";
const { name, url, type, imageUrl, alt } = Astro.props as PortfolioCardProps;
---

<a href={url} class="block" target="_blank" rel="noopener noreferrer">
  <div
    class="bg-[var(--card)]
      rounded-2xl
      overflow-hidden
      transform transition-transform duration-500 ease-in-out
      hover:-translate-y-1 hover:shadow-xl"
  >
    <div class="relative w-full">
      <img
        src={imageUrl}
        alt={alt}
        loading="lazy"
        class="aspect-video w-full object-cover rounded-2xl sm:aspect-2/1 lg:aspect-3/2"
      />
      <div
        class="absolute inset-0 rounded-2xl ring-1 ring-[var(--border)] ring-inset"
      >
      </div>
    </div>

    <div class="p-5 lg:p-6">
      <div class="group relative">
        <h3
          class="text-lg font-semibold
            text-[var(--foreground)]
            group-hover:text-[var(--primary)]
            transition-colors duration-150"
        >
          <span class="absolute inset-0"></span>
          {name}
        </h3>
        <p class="mt-1 text-sm text-[var(--muted-foreground)]">
          {type}
        </p>
      </div>
    </div>
  </div>
</a>
