---
export interface BlogCardProps {
  post: {
    title: string;
    href: string;
    publishedAt: string;
    categories: string[];
    mainImage: string;
    alt: string;
    author: string;
    excerpt?: string;
  };
  delay: number;
}

const { post, delay } = Astro.props as BlogCardProps;

const delayClass =
  delay === 0 ? "animate-fade-in" : `animate-fade-in-delay-${delay}`;
---

<article class={`opacity-0 ${delayClass}`}>
  <a href={post.href} class="block">
    <div
      class="
        group
        bg-[var(--card)]
        rounded-2xl
        overflow-hidden
        transform transition-transform duration-500 ease-in-out
        hover:-translate-y-1 hover:shadow-xl
      "
    >
      <div class="relative w-full">
        <img
          src={post.mainImage}
          alt={post.alt}
          loading="lazy"
          class="aspect-video w-full object-cover rounded-2xl sm:aspect-2/1 lg:aspect-3/2"
        />
        <div
          class="absolute inset-0 rounded-2xl ring-1 ring-[var(--border)] ring-inset"
        ></div>
      </div>

      <div class="p-5 lg:p-6">
        <div class="flex flex-wrap items-center gap-x-2 text-xs text-[var(--muted-foreground)]">
          <time datetime={post.publishedAt}>
            {new Date(post.publishedAt).toLocaleDateString("es-MX", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })}
          </time>

          {post.categories.length > 0 && (
            <>
              <span aria-hidden="true">â€¢</span>
              <span
                class="
                  rounded-full 
                  bg-[var(--secondary)] 
                  px-2 py-1 
                  font-medium 
                  text-[var(--secondary-foreground)]
                "
              >
                {post.categories[0]}
              </span>
            </>
          )}
        </div>

        <h3
          class="
            mt-3 text-lg font-semibold 
            text-[var(--foreground)] 
            group-hover:text-[var(--primary)] 
            transition-colors duration-150
          "
        >
          <span class="absolute inset-0"></span>
          {post.title}
        </h3>

        <p class="mt-1 text-sm text-[var(--muted-foreground)]">
          por {post.author}
        </p>

        {post.excerpt && (
          <p class="mt-2 text-sm text-[var(--muted-foreground)] line-clamp-3">
            {post.excerpt}
          </p>
        )}
      </div>
    </div>
  </a>
</article>
