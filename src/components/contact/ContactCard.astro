---
import type { ContactCardProps } from "../../interfaces/ContactCard";

const { title, email, mailtoLink, phoneLabel, phone, delay } =
  Astro.props as ContactCardProps;
const delayClass = `animate-fade-in-delay-${delay}`;
---

<div
  class={`
    rounded-2xl
    bg-[var(--card)]
    p-10
    opacity-0
    ${delayClass}
  `}
>
  <h3 class="text-base/7 font-semibold text-[var(--card-foreground)]">
    {title}
  </h3>

  <dl class="mt-3 space-y-1 text-sm/6 text-[var(--muted-foreground)]">
    <div>
      <dt class="sr-only">Correo electrónico</dt>
      <dd>
        <a
          href={mailtoLink}
          class="font-semibold
            text-[var(--primary)] /* color primario para enlace */
            hover:underline
            hover:text-[var(--primary-foreground)] /* texto del enlace en hover */
            transition-colors
            duration-200"
        >
          {email}
        </a>
      </dd>
    </div>

    <div class="mt-1">
      <dt class="sr-only">Teléfono</dt>
      <dd>
        <a
          href={`tel:${phone}`}
          class="font-semibold
            text-[var(--primary)]
            hover:underline
            hover:text-[var(--primary-foreground)]
            transition-colors
            duration-200"
        >
          {phoneLabel}
        </a>
      </dd>
    </div>
  </dl>
</div>
