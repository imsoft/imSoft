---
import RandomServiceLink from "./shared/RandomServiceLink.astro";
import CtaLinks from "./shared/CtaLinks.astro";

const { title, description, bullets } = Astro.props;
---

<div class="bg-[var(--background)]">
  <div class="relative isolate px-6 pt-1 lg:px-8">
    <div
      class="mx-auto max-w-7xl py-20 sm:py-28 lg:py-36
             opacity-0 animate-fade-in"
    >
      <div class="hidden sm:mb-8 sm:flex sm:justify-center">
        <div
          class="relative rounded-full px-3 py-1 text-sm/6 text-[var(--muted-foreground)] ring-1 ring-[var(--border)] hover:ring-[var(--foreground)]
                 opacity-0 animate-fade-in-delay-200"
        >
          <RandomServiceLink />
        </div>
      </div>

      <div class="text-center">
        <h1
          class="text-6xl font-semibold tracking-tight text-balance text-[var(--foreground)] sm:text-7xl
                 opacity-0 animate-fade-in-delay-400"
        >
          {title}
        </h1>

        <p
          class="mt-8 text-lg font-medium text-pretty text-[var(--muted-foreground)] sm:text-xl/8
                 opacity-0 animate-fade-in-delay-600"
        >
          {description}
          <br />
          {bullets}
        </p>

        <div
          class="mt-10 flex items-center justify-center gap-x-6
                 opacity-0 animate-fade-in-delay-800"
        >
          <CtaLinks />
        </div>
      </div>
    </div>
  </div>
</div>
